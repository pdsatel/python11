import sys
import os
    
    
  
def clear_scream():
        if os.name =='nt':
                os.system('cls')
        else:
               os.system('clear')

def jogo1(): 
        clear_scream()          
        print('A sua primeira missão é colocar um gato e um rato nos quartos corrteos, e não se esqueça das regras')
        print('|-----| |-----| |-----||Gato|')
        quarto2=input('Qual animal você quer colocar no quarto ao lado do gato?  (quarto2): ')   
        print('')
        if quarto2=='rato':
                print('O gato comeu o rato!!')
                sys.exit()
         

        else:
         print('Voce conseguiu !!')
         print('|-----| |-----| |Gato||Gato|')
         clear_scream()
         print('|-----| |-----| |Gato||Gato|')
         print('|Rato| |-----| |----||----|')
        quarto3=input('Qual animal você quer colocar no quarto ao lado do rato?  (quarto3): ')
        if quarto3=='gato':
             print('O gato comeu o rato!! ')
             sys.exit()
              
        else:
             print('|-----| |-----| |Gato||Gato|')
             print('|Rato| |Rato| |----||----|')   
             print('Voce conseguiu!! ')
                
def jogo2 ():
    print('')
    clear_scream
    print('Agora sua missao é colocar dois cães e um osso.') 
    print('Você tem 3 quartos vagos um deles esta ocupado por um cão ')
    print('Os lugares vagos são, um isolado, um ao lado do cão e outro ao lado dessa falada')   
    
    print('|-----| |-----| |Gato||Gato|')
    print('|Cão| |----| |----||----|')      

    quarto6=input('Qual item você vai colocar no quarto ao lado do cão: ')   
    if quarto6 =='osso':
                    print('O cão comeu o osso')
                    sys.exit()
    else:
                        print('Você conseguiu!!')  
                        
    quarto7=input('Qual item você quer colocar no quarto ao lado do quarto anterior: ')
    if quarto7=='osso':
                    print('O cão comeu o osso')
                    sys.exit()
    else:
                         print('Você conseguiu!!')
    quarto8=input('Qual item você quer colocar no quarto que esta isolado: ')
    if quarto8=='osso':
            print('Você conseguiu !!')
    else:
            print('Não é possivel que você colocou isso ???')
            sys.exit()           
def jogo3():
    clear_scream
    print('Parabéns você passou de fase')
    print('Agora sua missão é colocar um gato,um rato e um osso')
    print('Porem tem um dos quartos que esta ocupado por um gato')
    print('')
    quarto9=input("Qual animal você quer colocar no quarto ao lado direito do gato?")
    if quarto9=='rato':
            print('O gato comeu o rato!!')
            sys.exit()
    if quarto9== 'osso':
         print('Você tem um plano diferente')
    else:
        print('Você conseguiu!!')
      
    quarto10=input('Agora qual animal você quer colocar no quarto ao lado esquerdo do gato?')
    if quarto10=='rato':
         print('O gato comeu o rato')
         sys.exit()
    if quarto10=='gato':
        print('Qual o seu plano agr???')    
    P2=input('CONTINUAR(1) ou VOlTAR AO INICIO(2): ')
    if P2==1:
            print('NÃO TEM COMO VOCE CONTINUAR AMIGÃOO')
            sys.exit
    else:
      print('VOLTANDO AO INICIO')  
      
def jogo4():
    clear_scream
    print()      
def menu():
    while True:
        print("Bem-vindo ao Hotel")
        print("1. Jogar ")
        print("2. Tutorial")
        print("3. Creditos")
        print("4. Exit")

        choice = int(input("Escolha uma opçao e aperte enter: "))
        clear_scream
        if choice == 1:
            print('     BEM-VINDO AO JOGO DO HOTEL')
            jogo1()
            jogo2()
            jogo3()
        elif choice == 2:
            clear_scream
            print("O seu objetivo é alocar animais dentro de um hotel")
            print('Porem você não pode deixar aos animais/objetos juntos')
            print('Você não pode deixar o Osso junto com o Cão, não pode deixar o Gato junto com o Rato')
        
            print('E não pode deixar o Rato junto com Queijo')
        elif choice == 3:
            clear_scream
            print("Pedro") 
        elif choice == 4:
            print("Saindo do programa...")
            break
        else:
            print("Opção invalida...")
menu()
    
    





    
    
    
    
    
    
    
    
    
    
    
          


