  print('')
  quarto6=input("Qual animal você quer colocar no quarto ao lado direito do gato?")
  if quarto6=='rato':
    print('O gato comeu o rato!!')
    sys.exit()
  if quarto6== 'osso':
    print('Você tem um plano diferente')
  else:
    print('Você conseguiu!!')
      
    quarto7=input('Agora qual animal você quer colocar no quarto ao lado esquerdo do gato?')
    if quarto7=='rato':
         print('O gato comeu o rato')
         sys.exit()
    if quarto7=='gato':
        print('Qual o seu plano agr???')    
    P2=input('CONTINUAR(1) ou VOlTAR AO INICIO(2): ')
    if P2==1:
        print('NÃO TEM COMO VOCE CONTINUAR AMIGÃOO')
        sys.exit
    else:
      print('VOLTANDO AO INICIO')
    
    
    
    
def menu():
    print("1. Jogar ")
    print("2. Tutorial")
    print("3. Creditos")
    print("4. Exit")

    choice = int(input("Escolha uma opçao e aperte enter: "))

    if choice == 1:
        print('     BEM-VINDO AO JOGO DO HOTEL')
        jogo1()
        jogo2()
        jogo3()
    elif choice == 2:
        print("O seu objetivo é alocar animais dentro de um hotel")
        print('Porem você não pode deixar aos animais/objetos juntos')
        print('Você não pode deixar o Osso junto com o Cão, não pode deixar o Gato junto com o Rato')
        print('E não pode deixar o Rato junto com Queijo')
    elif choice == 3:
        print("Pedro")
    elif choice == 4:
        print("Saind do programa...")
    else:
        print("Opção invalida...")  
        
        
def main(): 
    menu()
    print('pp´p')
