import os
import sys



def jogo1(quarto2 ,quarto3,):     
        quarto2 = input('Qual animal você quer colocar no quarto ao lado do gato?  (quarto2): ')
        if quarto2=='rato':
            print('O gato comeu o rato!!')
            sys.exit()
        else:
            print('Voce conseguiu !!')
            quarto3 = input('Qual animal você quer colocar no quarto ao lado do rato?  (quarto3): ')
            if quarto3=='gato':
                print('O gato comeu o rato!! ')
                sys.exit()
            else:
                print('Voce conseguiu!! ')
                os.system('cls')
def jogo2(quarto2,quarto4,quarto3,quarto5):
    print('Agora sua missao é colocar dois cães e um osso.') 
    print('')    
    print('Você tem 3 quartos vagos um deles esta ocupado por um cão ')
    print('')
    print('Os lugares vagos são, um isolado, um ao lado do cão e outro ao lado dessa falada')      
    quarto2='cão'
    quarto3=input('Qual item você vai colocar no quarto ao lado do cão: ')   
    if quarto3 =='osso':
        print('O cão comeu o osso')
        sys.exit()
    else:
        print('Você conseguiu!!') 
        quarto4=input('Qual item você quer colocar no quarto ao lado do quarto anterior: ')
    if quarto4=='osso':
        print('O cão comeu o osso')
        sys.exit()
    else:
         print('Você conseguiu!!')
    quarto5=input('Qual item você quer colocar no quarto que esta isolado: ')
    if quarto5=='osso':
        print('Você conseguiu !!')
    else:
        print('Não é possivel que você colocou isso ???')
        sys.exit()   
        
def jogo3(quarto6,quarto7,quarto8):
  print('Parabéns você passou de fase')
  print('Agora sua missão é colocar um gato,um rato e um osso')
