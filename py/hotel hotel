def clear_scream():
        if os.name =='nt':
                os.system('cls')
        else:
               os.system('clear')

def jogo1(): 
        clear_scream()          
        print('A sua primeira missão é colocar um gato e um rato nos quartos corrteos, e não se esqueça das regras')
        print('|-----| |-----| |-----||Gato|')
        quarto2=input('Qual animal você quer colocar no quarto ao lado do gato?  (quarto2): ')   
        print('')
        if quarto2=='rato':
                print('O gato comeu o rato!!')
                print('Tente Novamente hahaha')
                clear_scream()
                print('O gato comeu o rato!!')
                print('Tente Novamente hahaha')
                menu2()

        else:
         print('Voce conseguiu !!')
         print('|-----| |-----| |Gato||Gato|')
         print('|Rato| |-----| |----||----|')
        quarto3=input('Qual animal você quer colocar no quarto ao lado do rato?  (quarto3): ')
        if quarto3=='gato':
             print('O gato comeu o rato!! ')
             print('Tente Novamente hahaha')
             clear_scream()
             print('O gato comeu o rato!! ')
             print('Tente Novamente hahaha')
             menu2()
        else:
             print('|-----| |-----| |Gato||Gato|')
             print('|Rato| |Rato| |----||----|')   
             print('Voce conseguiu!! ')
             print('Parabéns você passou de fase')
                
